# Rename this to config.yaml and place sensitive data here.

navidrome:
  base_url: http://IP:PORT/rest
  username: username
  password: password

integration:
  imgur_client_id: xxxxx # Your Imgur Client ID
  discord_client_id: 'xxxxx' # Your Discord Application ID
  discord_asset_name: null # Set to an asset name (e.g., 'navidrome_logo') or 'null'

general:
  poll_interval_playing_seconds: 10  # When music is playing
  poll_interval_idle_seconds: 15     # When idle/no track
  album_cache_file: "album_cache.json"
  request_timeout_seconds: 5
  track_comment: false # Show track subtitle/comment (e.g., "(Explicit)", "(Remastered)"). Default: false
  album_version: true # Show album version/edition (e.g., "(Limited Edition Collector's Set)"). Default: false
  ignored_artists:
    - "Justin Bieber"

image:
  max_size: 512 # Max width/height for image assets (Discord recommended is 512)
  jpeg_quality: 85
  max_file_bytes: 4194304 # 4MB (4 * 1024 * 1024)